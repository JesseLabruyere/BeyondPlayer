{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid noPadding" id="mainContainer">
        <div class="row-fluid">
            <div class="col-md-12 noPadding">
                <!-- this file contains the header html -->
                {% embed "header.html.twig" %}
                {% endembed %}
            </div>
        </div>
        <div class="row-fluid">
            <div class="col-md-2" style="background-color:#31b0d5;">
                <!-- this file contains the leftbar -->
                {% embed "leftbar.html.twig" %}
                {% endembed %}
            </div>
            <div class="col-md-10" style="background-color:#f0ad4e;">
                <!-- this file contains the center -->
                {% embed "center.html.twig" %}
                {% endembed %}
            </div>
        </div>
        <div class="row-fluid">
            <div class="col-md-12" style="background-color:#419641">
                <!-- this file contains the footer -->
                {% embed "footer.html.twig" %}
                {% endembed %}
            </div>
        </div>
    </div>
{% endblock %}
